<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#75B5BD">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_anhsp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anhmau"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Chanh Việt Nam"
            android:textSize="20dp"
            android:textColor="#D12828"
            app:layout_constraintStart_toEndOf="@+id/img_anhsp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_giasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Giá: 20.000 vnd"
            android:textColor="#000000"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@+id/img_anhsp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tensp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>